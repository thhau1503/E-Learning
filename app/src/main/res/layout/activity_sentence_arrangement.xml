<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_white"
    android:gravity="top"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/bungee"
            android:text="E-LEARNING"
            android:textSize="28sp"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="FILL THE BLANKS"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/img_app"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/linearLayoutWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="250dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textViewWord1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drop_zone_background"
            android:padding="8dp"
            android:text="_________"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textViewWord2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_________"
            android:textSize="20sp"
            android:padding="8dp"
            android:background="@drawable/drop_zone_background" />

        <TextView
            android:id="@+id/textViewWord3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_________"
            android:textSize="20sp"
            android:padding="8dp"
            android:background="@drawable/drop_zone_background" />

        <TextView
            android:id="@+id/textViewWord4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_________"
            android:textSize="20sp"
            android:padding="8dp"
            android:background="@drawable/drop_zone_background" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutWordsToChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/linearLayoutWords"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textViewWordChoice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_________"
            android:textSize="20sp"
            android:padding="8dp"
            android:background="@drawable/draggable_background"/>

        <TextView
            android:id="@+id/textViewWordChoice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_________"
            android:textSize="20sp"
            android:padding="8dp"
            android:background="@drawable/draggable_background" />

        <TextView
            android:id="@+id/textViewWordChoice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_________"
            android:textSize="20sp"
            android:padding="8dp"
            android:background="@drawable/draggable_background" />

        <TextView
            android:id="@+id/textViewWordChoice4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_________"
            android:textSize="20sp"
            android:padding="8dp"
            android:background="@drawable/draggable_background" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_below="@id/linearLayoutWordsToChoose"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#6FD095"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_below="@id/buttonSubmit"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonPrevious"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#4A95CE"
            android:text="Previous" />

        <Button
            android:id="@+id/buttonNEXT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_weight="1"
            android:backgroundTint="#4A95CE"
            android:text="Next" />

    </LinearLayout>

</RelativeLayout>
