<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".luyennghe.ListeningActivity">

    <View
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:background="@drawable/background_listen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view5"
        android:layout_width="400dp"
        android:layout_height="250dp"

        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ImgBT" />

    <TextView
        android:id="@+id/txtscoreLN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:text="LISTENING"
        android:textColor="@color/color_white"
        android:textSize="20sp"
        app:drawableTint="@color/color_white"

        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toBottomOf="@+id/txtquestcountLN"/>

    <TextView
        android:id="@+id/txtquestcountLN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtscoreLN"


        android:layout_marginTop="16dp"
        android:drawablePadding="10dp"
        android:fontFamily="@font/fredokaoneregular"
        android:text="E-LEARNING"
        android:textColor="@color/color_white"
        android:textSize="20sp"
        app:drawableTint="@color/color_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageButton
        android:id="@+id/ImgBT"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_margin="20dp"
        android:background="@drawable/volumn"
        android:drawablePadding="10dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view4"/>


    <ImageView
        android:id="@+id/imgHinh"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:src="@drawable/cloud"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="@+id/view5"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="@+id/view5"/>

    <RadioGroup
        android:id="@+id/radiochoices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgHinh"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/view5"
        app:layout_constraintTop_toBottomOf="@+id/view5">
        <RadioButton
            android:id="@+id/op1"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:text="Option 1"
            android:fontFamily="@font/fredokaoneregular"
            android:textColor="@color/black"
            android:background="@drawable/bg_lis"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/op2"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:text="Option 2"
            android:fontFamily="@font/fredokaoneregular"
            android:textColor="@color/black"
            android:background="@drawable/bg_lis"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/op3"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:text="Option 3"
            android:fontFamily="@font/fredokaoneregular"
            android:textColor="@color/black"
            android:background="@drawable/bg_lis"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/op4"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:text="Option 4"
            android:fontFamily="@font/fredokaoneregular"
            android:textColor="@color/black"
            android:background="@drawable/bg_lis"
            android:textSize="20sp"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnconfirmLN"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="128dp"
        android:backgroundTint="#6FD095"
        android:fontFamily="@font/fredokaoneregular"
        android:gravity="center"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="Confirm"
        android:textColor="@color/color_white"
        app:backgroundTint="#6EE608"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radiochoices"/>

    <Button
        android:id="@+id/btnpreviousLN"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="124dp"
        android:backgroundTint="#4A95CE"
        android:fontFamily="@font/fredokaoneregular"
        android:gravity="center"
        android:text="Previous"
        android:textColor="@color/color_white"
        app:backgroundTint="#6EE608"
        app:layout_constraintEnd_toStartOf="@+id/btnNextLN"
        app:layout_constraintTop_toBottomOf="@+id/btnconfirmLN" />

    <Button
        android:id="@+id/btnNextLN"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4A95CE"
        android:fontFamily="@font/fredokaoneregular"
        android:gravity="center"
        android:text="Next"
        android:textColor="@color/color_white"
        app:backgroundTint="#6EE608"
        app:layout_constraintStart_toEndOf="@+id/btnpreviousLN"
        app:layout_constraintTop_toBottomOf="@+id/btnconfirmLN" />


</androidx.constraintlayout.widget.ConstraintLayout>