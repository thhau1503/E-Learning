<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroud2"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill in the blanks"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/sentenceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sentence: "
        android:textSize="18sp"
        android:textColor="#000000"
        android:padding="16dp" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Complete the sentence:"
        android:textSize="18sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/answerEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type your answer here"
        android:inputType="text"
        android:textColor="#000000"
        android:padding="16dp"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/hintTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hint: Hint text goes here"
        android:textSize="16sp"
        android:textColor="#888888"
        android:padding="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/previousButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Previous"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:padding="16dp"
            android:background="#2196F3" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:padding="16dp"
            android:background="#FF5722" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:padding="16dp"
            android:background="#2196F3" />
    </LinearLayout>

    <TextView
        android:id="@+id/correctAnswerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correct answer: "
        android:textSize="16sp"
        android:textColor="#000000"
        android:visibility="gone"
        android:padding="16dp" />

</LinearLayout>
